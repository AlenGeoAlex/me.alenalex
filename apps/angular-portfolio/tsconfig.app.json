{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": "./",
    "paths": {
      "@api": ["src/api/index.ts"],
      "@api/*": ["src/api/*"],
      "@env/*": ["src/environments/*"],
      "@services/*": ["src/app/services/*"],
      "@types/*": ["src/app/types/*"],
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
